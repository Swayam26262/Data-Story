# FastAPI Configuration
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,https://datastory-ai.vercel.app

# OpenAI Configuration (Legacy - not currently used)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_RETRIES=3
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_OUTPUT_TOKENS=2048

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/datastory?retryWrites=true&w=majority

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Environment
ENVIRONMENT=development
